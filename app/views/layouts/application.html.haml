%html
  %head
    %title Omar Diab
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application", "welcome"
    = @headtags
    = csrf_meta_tags
  %body
    .div#header
      %span#pageheader Omar Diab
      %ul.nav
        -@sections.each do |section|
          %li.section
            = link_to(section, section)
    .div#content
      = yield
    .div#footer
      %p
        Omar Diab &copy; 2012 &#124; 
        = link_to('About this site', 'about')
