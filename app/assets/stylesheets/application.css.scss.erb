$background-color: <%= APP_CONFIG['background-color'] %>;
$footer-background-color: <%= APP_CONFIG['footer-background-color'] %>;
$text-color: <%= APP_CONFIG['text-color'] %>;
$header-glow: <%= APP_CONFIG['header-glow'] %>;
$header-glow-size: <%= APP_CONFIG['header-glow-size'] %>;
$header-glow-color: <%= APP_CONFIG['header-glow-color'] %>;
$nav-text-color: <%= APP_CONFIG['nav-text-color'] %>;

body {
  background-color: $background-color;
  font-family: 'Open Sans', sans-serif;
  color: $text-color;
  margin: 0px;
}

div {
  &#header {
    margin-top: 5%;

    a {
      text-decoration:none;
      text-shadow: none;

      &:link, &:visited, &:hover, &:active {
        text-decoration: none;
        color: $nav-text-color;  
      }

      @if $header-glow {
        -webkit-transition: all 0.3s ease-in;
        transition: all 0.3s ease-in;
        -moz-transition: all 0.3s ease-in;
        -o-transition: all 0.3s ease-in;

        &:hover, &:focus, &:active {
          text-shadow: 0px 0px $header-glow-size $header-glow-color;
        }
      }
    }
  }

  &#header, &#content {
    margin-left: 5%;
    margin-bottom: 3%;
  }

  &#header, &#content, &#footer {
    clear: both;
  }

  &#footer {
    background: $footer-background-color;
    padding-top: .25%;
    padding-bottom: .25%;
    text-align: center;
  }
}

#banner {
  padding-right: 2%;
}

#bannerText {
  font-size: 350%;
  font-weight: 300;
  display: inline-block;
}

ul {
  &.nav {
    font-size: 150%;
    font-weight: 300;
    display: inline;

    li {
      display: inline;
      list-style-type: none;
      padding-right: 4%;
    }
  }
}
